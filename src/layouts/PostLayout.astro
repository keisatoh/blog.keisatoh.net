---
import Footer from '../components/Footer.astro';
import GoBackButton from '../components/GoBackButton.astro';
import type { Frontmatter } from '../types';

const { title, date, description, dek, ogImage } = Astro.props
  .content as Frontmatter;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <div class="mt-3 p-3 text-center sm:p-5">
        <GoBackButton />
      </div>
      <article class="prose mx-auto px-4 py-8 lg:prose-lg lg:py-16">
        <div class="not-prose">
          <time datetime={date} class="text-sm md:text-base">
            {
              new Date(date).toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
              })
            }
          </time>
          <h1 class="mt-1 text-3xl font-normal text-black md:text-5xl">
            {title}
          </h1>
          <div
            class="mx-auto mt-2 max-w-4xl text-base tracking-tight text-slate-600 md:mt-6 md:text-xl"
          >
            {dek}
          </div>
        </div>
        <div class="mt-12 md:mt-16">
          <slot />
        </div>
      </article>
      <div class="mt-3 p-3 text-center sm:p-5">
        <GoBackButton />
      </div>
      <Footer />
    </main>
  </body>
</html>
